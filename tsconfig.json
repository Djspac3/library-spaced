{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "es6",
    "strict": true,
    "strictNullChecks": true,
    "allowArbitraryExtensions": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
